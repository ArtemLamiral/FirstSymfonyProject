<!DOCTYPE html>
<html>
<head>

    <meta charset="UTF-8">
    <meta name="description" content="Minimal Portfolio Theme">
    <meta name="keywords" content="responsive, retina ready, html5, css3, creative, portfolio, bootstrap theme" />
    <meta name="author" content="KingStudio.ro">
    <title>{% block title %}Welcome!{% endblock %}</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="icon" href="images/favicon.png">

    {% block stylesheets %}

        <link href="{{ asset('bootstrap/css//bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('css/style.css') }}" rel="stylesheet">
        <link href="{{ asset('css/animate.css') }}" rel="stylesheet">
        <link href="{{ asset('css/magnific-popup.css')}}" rel="stylesheet">
        <!-- fonts -->
        <link href="https://fonts.googleapis.com/css?family=Raleway:400,700,800,900" rel="stylesheet">
        <link href="{{ asset('css/font-awesome.min.css')}}" rel="stylesheet" type="text/css">
        <link href="{{ asset('fonts/FontAwesome.otf')}}" rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="{{ asset('css/linear-icons.css')}}">

        <link rel="stylesheet" href="{{asset('owlcarousel/dist/assets/owl.carousel.min.css')}}">
        <link rel="stylesheet" href="{{asset('owlcarousel/dist/assets/owl.theme.default.min.css')}}">    

    {% endblock %}

</head>

<body>

<header>
    <!-- nav -->
    
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">SIGMA PROD</a>
            </div><!-- / navbar-header -->
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown"><a href="/" class="dropdown-toggle"  role="button" aria-haspopup="true" aria-expanded="false"><span>ГЛАВНАЯ</span></a>
                       
                    </li>               
                    <li><a href="/about"><span>ОБО МНЕ</span></a></li>
                   
                    
                    </li>
                    <li class="dropdown">
                    <a href="/works" class="dropdown-toggle"  role="button" aria-haspopup="true" aria-expanded="false"><span>ПОРТФОЛИО</span></a>
                 
                    </li>
                    <li><a href="/contact"><span>КОНТАКТЫ</span></a></li>
                </ul>
            </div><!--/ nav-collapse -->
        </div><!-- / container -->
    </nav>

</header>

<!-- / nav -->

<!-- header-banner -->
<div id="header-banner" class="demo-1">
<div class="banner-content text-center">
    <div class="banner-info">
        <h1>MINIMAL PORTFOLIO</h1>
        <p>Minimal Portfolio Bootstrap Theme</p>
    </div><!-- / banner-info -->

</div><!-- / banner-content -->
</div>
{% block carousel %}

{% endblock %}
<!-- / header-banner -->
</header>

    <!-- HEADER !-->

<div class="">

    {% block body %} {% endblock %}

</div>

<footer>

    <div class="container">
        <p class="footer-info">© EFREMOV - TEAM 
            <span class="social pull-right">
                <a href="#x"><i class="fa fa-facebook"></i></a>
                <a href="#x"><i class="fa fa-twitter"></i></a>
                <a href="#x"><i class="fa fa-instagram"></i></a>
            </span>
        </p>
    </div>
</footer>

{% block javascripts %} 
    <script src="{{ asset('js/jquery.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
            
    <script src="{{ asset('js/jquery.easing.min.js') }}"></script>

<!-- portfolio -->
    <script src="{{ asset('js/custom.js') }}"></script>
    <script src="{{ asset('js/jquery.shuffle.min.js') }}"></script>
<!-- lightbox -->
    <script src="{{ asset('js/jquery.magnific-popup.min.js') }}"></script>
<!-- preloader -->
    <script src="js/preloader.js"></script>

    <script src="{{asset('owlcarousel/dist/owl.carousel.min.js')}}"></script> 

    <script type="text/javascript">
                $(document).ready(function(){
          $(".owl-carousel").owlCarousel();
        });
                
        $('.owl-carousel').owlCarousel({
        loop:true,
        margin:10,
        nav:true,
        responsive:{
            0:{
                items:1
            },
            600:{
                items:3
            },
            1000:{
                items:5
            }
        }
});
</script>
<!-- / preloader -->

<!-- / javascript -->


{% endblock %}

    </body>
</html>
